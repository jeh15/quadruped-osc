<mujoco model="pendulum">
    <compiler angle="radian" inertiafromgeom="true"/>
  
    <option timestep="0.02">
        <flag contact="disable"/>
    </option>

    <default>
        <joint damping="0.05"/>
    </default>
  
    <worldbody>
        <light name="light" pos="0 0 2"/>
        <geom name="floor" size="2 2 .2" type="plane"/>
        <camera name="fixed" pos="0 -1.5 2" xyaxes='1 0 0 0 1 1'/>
        <camera name="lookat" mode="targetbodycom" target="pole" pos="0 -2 1"/>
        <body name="pole" pos="0 0 0">
            <joint name="hinge" type="hinge" axis="0 1 0" damping="0.1"/>
            <geom name="base" type="cylinder" quat="1 1 0 0" size="0.021 0.05" mass="0"/>
            <geom name="pole" type="capsule" pos="0 0 0.15" quat="1 0 0 0" size="0.02 0.15" mass="1"/>
            <site name="end_effector" type="sphere" size="0.02" pos="0 0 0.6"/>
        </body>
    </worldbody>
  
    <actuator>
        <motor name="torque" joint="hinge" gear="1" ctrlrange="-1 1" ctrllimited="true"/>
    </actuator>

</mujoco>
<mujoco model="pendulum">
    <compiler angle="radian" inertiafromgeom="true"/>
  
    <option timestep="0.02">
        <flag contact="disable"/>
    </option>

    <default>
        <joint damping="0.05"/>
    </default>
  
    <worldbody>
        <light name="light" pos="0 0 2"/>
        <camera name="fixed" pos="0 -1.5 2" xyaxes='1 0 0 0 1 1'/>
        <camera name="lookat" mode="targetbodycom" target="link_1" pos="0 -2 1"/>
        <body name="link_1" pos="0 0 0">
            <joint name="hinge_1" type="hinge" axis="0 0 1" damping="0.1"/>
            <geom name="base" type="cylinder" quat="1 0 0 0" size="0.021 0.05" mass="0"/>
            <geom name="link_1_geom" type="capsule" pos="0.15 0 0" quat="1 0 1 0" size="0.02 0.15" mass="1"/>
            <body name="link_2" pos="0.3 0 0">
                <joint name="hinge_2" type="hinge" axis="0 0 1" damping="0.1"/>
                <geom name="hinge_geom" type="cylinder" quat="1 0 0 0" size="0.021 0.02" mass="0"/>
                <geom name="link_2_geom" type="capsule" pos="0.15 0 0" quat="1 0 1 0" size="0.02 0.15" mass="1"/>
                <site name="end_effector" type="sphere" size="0.02" pos="0.3 0 0"/>
            </body>
        </body>
    </worldbody>
  
    <actuator>
        <motor name="motor_1" joint="hinge_1" gear="1" ctrlrange="-1 1" ctrllimited="true"/>
        <motor name="motor_2" joint="hinge_2" gear="1" ctrlrange="-1 1" ctrllimited="true"/>
    </actuator>

</mujoco>